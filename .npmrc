# Hoist dependencies to root node_modules for React Native/Expo compatibility
node-linker=hoisted
shamefully-hoist=true

# Hoist dependencies to root node_modules for better performance
#hoist=true
#node-linker=hoisted
# Enable shamefully-hoist for React Native compatibility
#shamefully-hoist=true

# Strict peer dependencies (recommended for monorepos)
auto-install-peers=true
strict-peer-dependencies=false

# Save exact versions (no ^ or ~)
save-exact=true

# Improved performance
modules-cache-max-age=604800

# Enable pre/post lifecycle scripts (required for postbuild hooks)
enable-pre-post-scripts=true
