{
  "name": "@project/ui",
  "version": "0.0.0",
  "private": true,
  "description": "Shared UI components (React Native Web)",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./lib/icons": "./src/lib/icons.ts"
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@project/shared": "workspace:*",
    "@rn-primitives/accordion": "^1.0.0",
    "@rn-primitives/alert-dialog": "^1.0.0",
    "@rn-primitives/avatar": "^1.0.0",
    "@rn-primitives/checkbox": "^1.0.0",
    "@rn-primitives/dialog": "^1.0.0",
    "@rn-primitives/label": "^1.0.0",
    "@rn-primitives/radio-group": "^1.0.0",
    "@rn-primitives/select": "^1.0.0",
    "@rn-primitives/separator": "^1.0.0",
    "@rn-primitives/slot": "^1.0.0",
    "@rn-primitives/switch": "^1.0.0",
    "@rn-primitives/tabs": "^1.0.0",
    "@rn-primitives/tooltip": "^1.0.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react-native": "^0.468.0",
    "nativewind": "^4.0.1",
    "react-native": "0.81.5",
    "react-native-css-interop": "0.2.1",
    "react-native-reanimated": "~4.1.1",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "^0.19.10",
    "tailwind-merge": "3.3.1"
  },
  "devDependencies": {
    "@project/config": "workspace:*",
    "lucide-react": "0.553.0",
    "typescript": "^5.8.3",
    "vitest": "^1.2.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-native": "^0.73.0"
  }
}
